{
  "name": "ai-desktop",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "description": "Electron + Spring Boot AI desktop client",
  "scripts": {
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "start": "electron .",
    "dev": "$env:VITE_DEV_SERVER_URL='http://localhost:5173'; electron .",
    "pack": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "electron-log": "^5.1.2",
    "electron-store": "^8.1.0",
    "highlight.js": "^11.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^25.9.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.example.ai-desktop",
    "productName": "AI Desktop",
    "files": [
      "dist/renderer/**",
      "src/main/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}